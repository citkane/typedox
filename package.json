{
	"name": "typedox",
	"version": "0.0.0",
	"description": "Document Generator for Typedoc",
	"main": "backend/index.js",
	"bin": {
		"typedox": "backend/index.js"
	},
	"scripts": {
		"build:watch": "npx tsc -b -w",
		"backend": "node -r source-map-support/register dist/backend/index",
		"help": "node dist/backend/index.js --help",
		"typedoc": "npx typedoc --tsconfig tsconfig.json src/backend/typedox.ts",
		"scenario:namespace:recursion": "node -r source-map-support/register ./dist/backend/index.js --tsConfigs test/scenarios/namespaces",
		"test:backend": "mocha --file test/backend/backend.spec.ts --logLevel warn",
		"test:backend:coverage": "nyc --include=src/backend/**/*.ts npm run test:backend"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/citkane/typedox.git"
	},
	"keywords": [
		"typescript",
		"tsdoc",
		"documentation",
		"generator",
		"frontend"
	],
	"author": "Michael Jonker",
	"license": "GPL-3.0-or-later",
	"bugs": {
		"url": "https://github.com/citkane/typedox/issues"
	},
	"homepage": "https://github.com/citkane/typedox#readme",
	"workspaces": [
		"./.tsconfig"
	],
	"devDependencies": {
		"@typedox/tsconfig": "*",
		"@types/node": "^20.5.6",
		"mocha": "^10.2.0",
		"nyc": "^15.1.0",
		"prettier": "^3.0.1",
		"source-map-support": "^0.5.21",
		"ts-node": "^10.9.1",
		"typedoc": "^0.25.1",
		"typedox": "file:dist"
	},
	"dependencies": {
		"typescript": "^5.2.2"
	},
	"mocha": {
		"extension": [
			"ts"
		],
		"require": [
			"ts-node/register/transpile-only",
			"source-map-support/register"
		]
	},
	"nyc": {
		"extension": [
			".ts"
		],
		"reporter": [
			"clover",
			"text",
			"html"
		],
		"report-dir": "test/coverage",
		"temp-dir": "test/.nyc_output"
	}
}
